@page
@model IT_Helpdesk_System.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <hr />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- FULL NAME -->
    <div class="form-floating mb-3">
        <input asp-for="Input.FullName" class="form-control" />
        <label asp-for="Input.FullName"></label>
        <span asp-validation-for="Input.FullName" class="text-danger"></span>
    </div>

    <!-- EMAIL -->
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" />
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <!-- PASSWORD -->
    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <!-- CONFIRM PASSWORD -->
    <div class="form-floating mb-3">
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
        <label asp-for="Input.ConfirmPassword"></label>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">
        Register
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
