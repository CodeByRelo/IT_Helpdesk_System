@model IEnumerable<IT_Helpdesk_System.Models.Ticket>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Ticket ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Created By</th>
            <th>Assigned To</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.TicketId</td>
                <td>@ticket.Title</td>
                <td>
                    @if (ticket.Status == "Open")
                    {
                        <span class="badge bg-primary">Open</span>
                    }
                    else if (ticket.Status == "In Progress")
                    {
                        <span class="badge bg-warning text-dark">In Progress</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Closed</span>
                    }
                </td>
                <td>@ticket.CreatedBy?.FullName</td>
                <td>@ticket.AssignedTo?.FullName ?? "Unassigned"</td>
                <td>@ticket.CreatedAt.ToString("g")</td>
                <td>@ticket.UpdatedAt?.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@ticket.TicketId" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Assign" asp-route-id="@ticket.TicketId" class="btn btn-sm btn-outline-primary">Assign</a>
                </td>
            </tr>
        }
    </tbody>
</table>
