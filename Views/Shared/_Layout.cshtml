@using Microsoft.AspNetCore.Identity
@using IT_Helpdesk_System.Models
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IT Helpdesk</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />

    <!-- Google Material Symbols -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <header class="sidebar-header">
            <a asp-controller="Home" asp-action="Index" class="header-logo d-flex align-items-center gap-2">
                <span class="material-symbols-rounded fs-2 text-primary">headset</span>
                <span class="fs-5 fw-bold text-primary sidebar-text">IT Helpdesk</span>
            </a>

            <button class="toggler sidebar-toggler">
                <span class="material-symbols-rounded">chevron_left</span>
            </button>
            <button class="toggler menu-toggler">
                <span class="material-symbols-rounded">menu</span>
            </button>
        </header>

        <nav class="sidebar-nav">

            <!-- ================= PRIMARY NAV ================= -->
            <ul class="nav-list primary-nav">

                <!-- Home (Everyone) -->
                <li class="nav-item">
                    <a asp-controller="Home"
                       asp-action="Index"
                       class="nav-link @(ViewData["Title"]?.ToString() == "Home" ? "active" : "")">
                        <span class="nav-icon material-symbols-rounded">dashboard</span>
                        <span class="nav-label">Home</span>
                    </a>
                    <span class="nav-tooltip">Home</span>
                </li>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    var currentUser = await UserManager.GetUserAsync(User);
                    var isAdmin = await UserManager.IsInRoleAsync(currentUser, Roles.Admin);

                    <!-- My Requests -->
                    <li class="nav-item">
                        <a asp-controller="Tickets"
                           asp-action="Index"
                           class="nav-link @(ViewData["Title"]?.ToString() == "My Requests" ? "active" : "")">
                            <span class="nav-icon material-symbols-rounded">article</span>
                            <span class="nav-label">My Requests</span>
                        </a>
                        <span class="nav-tooltip">My Requests</span>
                    </li>

                    <!-- Request History -->
                    <li class="nav-item">
                        <a asp-controller="Tickets"
                           asp-action="History"
                           class="nav-link @(ViewData["Title"]?.ToString() == "Request History" ? "active" : "")">
                            <span class="nav-icon material-symbols-rounded">history</span>
                            <span class="nav-label">Request History</span>
                        </a>
                        <span class="nav-tooltip">Request History</span>
                    </li>

                    <!-- Admin Only -->
                    @if (isAdmin)
                    {
                        <li class="nav-item">
                            <a asp-controller="Admin"
                               asp-action="Index"
                               class="nav-link text-danger">
                                <span class="nav-icon material-symbols-rounded">admin_panel_settings</span>
                                <span class="nav-label">Admin Panel</span>
                            </a>
                            <span class="nav-tooltip">Admin Panel</span>
                        </li>
                    }
                }
                else
                {
                    <!-- Guest -->
                    <li class="nav-item">
                        <a asp-area="Identity"
                           asp-page="/Account/Login"
                           class="nav-link">
                            <span class="nav-icon material-symbols-rounded">login</span>
                            <span class="nav-label">Login to Access</span>
                        </a>
                        <span class="nav-tooltip">Login</span>
                    </li>
                }
            </ul>

            <!-- ================= SECONDARY NAV ================= -->
            <ul class="nav-list secondary-nav">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    var currentUser = await UserManager.GetUserAsync(User);
                    var isAdmin = await UserManager.IsInRoleAsync(currentUser, Roles.Admin);

                    <li class="nav-item">
                        <a asp-area="Identity"
                           asp-page="/Account/Manage/Index"
                           class="nav-link">
                            <span class="nav-icon material-symbols-rounded">account_circle</span>
                            <span class="nav-label">
                                Hi @currentUser.FullName
                                @if (isAdmin)
                                {
                                    <span class="badge bg-danger ms-1">Admin</span>
                                }
                            </span>
                        </a>
                        <span class="nav-tooltip">Profile</span>
                    </li>

                    <li class="nav-item">
                        <form asp-area="Identity"
                              asp-page="/Account/Logout"
                              method="post"
                              class="w-100">
                            <button type="submit"
                                    class="nav-link btn btn-link text-start w-100 p-0">
                                <span class="nav-icon material-symbols-rounded">logout</span>
                                <span class="nav-label">Logout</span>
                            </button>
                        </form>
                        <span class="nav-tooltip">Logout</span>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-area="Identity"
                           asp-page="/Account/Login"
                           class="nav-link">
                            <span class="nav-icon material-symbols-rounded">login</span>
                            <span class="nav-label">Login</span>
                        </a>
                        <span class="nav-tooltip">Login</span>
                    </li>
                }
            </ul>

        </nav>
    </aside>

    <!-- Page Content -->
    <div id="page-content-wrapper" class="content-wrapper">
        <div class="container-fluid mt-4">
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sidebar JS -->
    <script>
        const sidebar = document.querySelector(".sidebar");
        const sidebarToggler = document.querySelector(".sidebar-toggler");
        const menuToggler = document.querySelector(".menu-toggler");
        const contentWrapper = document.querySelector(".content-wrapper");

        let collapsedSidebarWidth = "85px";
        let fullSidebarWidth = "270px";

        sidebarToggler.addEventListener("click", () => {
            sidebar.classList.toggle("collapsed");
            contentWrapper.style.marginLeft =
                sidebar.classList.contains("collapsed") ? collapsedSidebarWidth : fullSidebarWidth;
        });

        menuToggler.addEventListener("click", () => {
            sidebar.classList.toggle("menu-active");
        });

        window.addEventListener("resize", () => {
            if (window.innerWidth < 1024) {
                contentWrapper.style.marginLeft = "0";
                sidebar.classList.remove("collapsed");
            } else {
                contentWrapper.style.marginLeft =
                    sidebar.classList.contains("collapsed") ? collapsedSidebarWidth : fullSidebarWidth;
                sidebar.classList.remove("menu-active");
            }
        });

        if (window.innerWidth >= 1024) {
            contentWrapper.style.marginLeft = fullSidebarWidth;
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
