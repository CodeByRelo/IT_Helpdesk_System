@model IT_Helpdesk_System.Models.Ticket

@{
    ViewData["Title"] = "Delete Request";
}

<div class="container-fluid">
    <h1 class="mb-3 text-center fw-semibold">Delete Request</h1>
    <h5 class="text-muted text-center mb-4">Are you sure you want to delete this ticket?</h5>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4 rounded">
                <h5 class="card-title mb-3 fw-semibold">Ticket Information</h5>

                <dl class="row mb-4">
                    <dt class="col-sm-4 fw-semibold">Title</dt>
                    <dd class="col-sm-8">@Model.Title</dd>

                    <dt class="col-sm-4 fw-semibold">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4 fw-semibold">Status</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Status == "Closed" ? "bg-success" : Model.Status == "In Progress" ? "bg-warning text-dark" : "bg-primary")">
                            @Model.Status
                        </span>
                    </dd>

                    <dt class="col-sm-4 fw-semibold">Created At</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>

                    <dt class="col-sm-4 fw-semibold">Updated At</dt>
                    <dd class="col-sm-8">@Model.UpdatedAt?.ToString("g")</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="TicketId" />
                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Delete" class="btn btn-danger">
                        <a asp-action="Index" class="btn btn-secondary">
                            <span class="material-symbols-rounded me-1">arrow_back</span> Back
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
