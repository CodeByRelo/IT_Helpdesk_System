@model IEnumerable<IT_Helpdesk_System.Models.Ticket>

@{
    ViewData["Title"] = "Request History";
}

<div class="container-fluid">
    <h1 class="mb-3 text-center fw-semibold">Request History</h1>
    <p class="text-muted text-center mb-4">
        These requests have been completed.
    </p>

    <div class="table-responsive shadow-sm rounded">
        <table class="table align-middle table-hover">
            <thead class="table-light">
                <tr>
                    <th>Request ID</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Completed At</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.TicketId</td>
                        <td>@ticket.Title</td>
                        <td>
                            <span class="badge bg-success">Done</span>
                        </td>
                        <td>@Html.DisplayFor(m => ticket.CreatedAt)</td>
                        <td>@Html.DisplayFor(m => ticket.UpdatedAt)</td>
                        <td class="text-center">
                            <a asp-action="Details"
                               asp-route-id="@ticket.TicketId"
                               class="btn btn-sm btn-outline-info"
                               title="View Details">
                                <span class="material-symbols-rounded">visibility</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <span class="material-symbols-rounded me-1">arrow_back</span> Back to My Requests
        </a>
    </div>
</div>
